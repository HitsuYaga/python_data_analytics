{% extends "base.jinja2" %} {% block content %}
<div>
  <ul class="logout">
    <li>
      <a href="/logout" class="badge badge-primary">Logout</a>
    </li>
    <li>
      <a>Hi, {{ session['username'] }}</a>
    </li>
  </ul>
</div>
<h1>SIMN Metron WebService</h1>
<p>Please choose methods:</p>

<div class="btn-group" role="group" aria-label="Basic example">
  <button type="button" class="btn btn-dark get-config">GET</button>
  <button type="button" class="btn btn-dark post-config">POST</button>
  <button type="button" class="btn btn-dark delete-config">DELETE</button>
  <button type="button" class="btn btn-dark test-config">TEST</button>
  <button type="button" class="btn btn-dark elasticsearch-config">ELASTICSEARCH</button>
</div>

<div class="form-query form-common col-lg-6">
  <form action="{{ url_for('query_config') }}" method=post>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Type Config</label>
      <select name="type-config" class="form-control query-type" id="exampleFormControlSelect1">
        <option>Parser</option>
        <option>Enrichment</option>
        <option>Indexing</option>
        <option>Global</option>
        <option>Grok Pattern</option>
        <option>Kafka Topic</option>
      </select>
    </div>
    <div class="form-group query-name">
      <label for="config-name">Config name</label>
      <input type="text" class="form-control" id="config-name" name="config-name" placeholder="Config Name" required>
    </div>
    <button type="submit" class="btn btn-primary">Query</button>
  </form>
</div>

<div class="form-create form-common col-lg-6">
  <form action="{{ url_for('create_config') }}" method=post>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Type Config</label>
      <select name="type-config" class="form-control create-type" id="exampleFormControlSelect1">
        <option>Parser</option>
        <option>Enrichment</option>
        <option>Indexing</option>
        <option>Grok Pattern</option>
        <option>Kafka Topic</option>
        <option>Topology</option>
      </select>
    </div>
    <div class="form-group create-name">
      <label for="config-name">Config name</label>
      <input type="text" class="form-control" id="config-name" name="config-name" placeholder="Config Name" required>
    </div>
    <div class="form-group config-data">
      <label for="exampleFormControlTextarea1">Config Data</label>
      <textarea name="config-data" class="form-control" id="exampleFormControlTextarea1" rows="10">
      </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>

<div class="form-delete form-common col-lg-6">
  <form action="{{ url_for('delete_config') }}" method=post>
    <div class="form-group">
      <label for="exampleFormControlSelect1">Type Config</label>
      <select name="type-config" class="form-control" id="exampleFormControlSelect1">
        <option>Parser</option>
        <option>Enrichment</option>
        <option>Indexing</option>
        <option>Grok Pattern</option>
        <option>Kafka Topic</option>
        <option>Topology</option>
      </select>
    </div>
    <div class="form-group delete-name">
      <label for="config-name">Config name</label>
      <input type="text" class="form-control" id="config-name" name="config-name" placeholder="Config Name" required>
    </div>
    <button type="submit" class="btn btn-primary">Delete</button>
  </form>
</div>

<div class="form-test form-common col-lg-6">
  <form action="{{ url_for('test_topology') }}" method=post>
    <div class="form-group topic-name">
      <label for="config-name">Topic name</label>
      <input type="text" class="form-control" id="topic-name" name="topic-name" placeholder="Topic Name" required>
    </div>
    <div class="form-group sample-data">
      <label for="exampleFormControlTextarea1">Sample Data</label>
      <textarea name="sample-data" class="form-control data-sample" id="exampleFormControlTextarea1" rows="10">
      </textarea>
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
  </form>
</div>

<div class="form-elasticsearch form-common col-lg-6">
  <form action="{{ url_for('query_elasticsearch') }}" method=post>
    <div class="form-group topic-name">
      <label for="config-name">Index name</label>
      <input type="text" class="form-control" id="index-name" name="index-name" placeholder="Index Name" required>
    </div>
    <div class="form-group config-data">
      <label for="exampleFormControlTextarea1">Timestamp</label>
      <input type="number" class="form-control" id="timestamp" name="timestamp" placeholder="Timestamp" required>
    </div>
    <button type="submit" class="btn btn-primary">Query</button>
  </form>
</div>

{% endblock %}